<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.devf.viewpager" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mx.devf.viewpager.fragment.ActivityViewPager"
            android:label="@string/title_activity_activity_view_pager" >
        </activity>
        <activity
            android:name=".ActivityDetailViewPager"
            android:label="@string/title_activity_activity_detail_view_pager" >
        </activity>
    </application>

</manifest>
